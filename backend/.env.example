# Environment Configuration
NODE_ENV=development
PORT=3001
BACKEND_URL="http://localhost:3001"

# Database
DATABASE_URL="postgresql://ihs_user:ihs_password@localhost:5432/ihs_connect"

# Redis
REDIS_URL="redis://localhost:6379"

# JWT
JWT_SECRET="your-super-secret-jwt-key-change-this-in-production"
JWT_EXPIRES_IN="7d"

# Gemini AI
GEMINI_API_KEY="your-gemini-api-key"

# Google AI Studio API for Batik Generation (Simpler Setup)
GOOGLE_API_KEY="your-google-ai-studio-api-key"

# Alternative: Google Cloud Imagen API (More Complex Setup)
# GOOGLE_CLOUD_PROJECT_ID="your-google-cloud-project-id"
# GOOGLE_CLOUD_LOCATION="us-central1"
# GOOGLE_CLOUD_API_KEY="your-google-cloud-service-account-key"
# GOOGLE_APPLICATION_CREDENTIALS="/path/to/service-account.json"

# Web3 Service
WEB3_SERVICE_URL="http://localhost:3003"

# Email Configuration (optional)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT=587
SMTP_USER="your-email@gmail.com"
SMTP_PASS="your-app-password"

# File Upload
MAX_FILE_SIZE=5242880  # 5MB
UPLOAD_DIR="uploads"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX=100  # limit each IP to 100 requests per windowMs
